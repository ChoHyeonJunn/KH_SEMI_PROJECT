<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.md.mapper">

	<select id="selectList" resultType="MDBOARD">
		SELECT *
		FROM MDBOARD
		ORDER BY
		SEQ DESC
	</select>

	<select id="selectOne" parameterType="int" resultType="MDBOARD">
		SELECT *
		FROM MDBOARD
		WHERE SEQ = #{SEQ}
	</select>

	<insert id="insert" parameterType="MDBOARD">
		INSERT INTO MDBOARD
		VALUES(MDBOARDSEQ.NEXTVAL,#{WRITER},#{TITLE},#{CONTENT},SYSDATE)
	</insert>

	<update id="update" parameterType="MDBOARD">
		UPDATE MDBOARD
		SET
		TITLE=#{TITLE}, CONTENT=#{CONTENT}
		WHERE SEQ = #{SEQ}
	</update>

	<delete id="delete" parameterType="int">
		DELETE FROM MDBOARD
		WHERE SEQ =
		#{SEQ}
	</delete>

	<delete id="muldel" parameterType="map">
		DELETE FROM MDBOARD
		WHERE SEQ IN
		<foreach collection="seqList" item="SEQ" open="("
			separator=", " close=")">
			#{SEQ}
		</foreach>
	</delete>

</mapper>












